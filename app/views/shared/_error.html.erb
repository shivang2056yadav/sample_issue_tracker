<% if notice or alert %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div id="error_explanation">
        <div class="alert alert-danger">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
      </div>
    </div>
  </div>
<% end%>