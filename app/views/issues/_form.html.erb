<%= form_for(issue) do |f| %>
  <% if issue.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>
      <ul>
      <% issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :subject %>
    <%= f.text_field :subject, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :assigned_to_id %>
    <%= f.select :assigned_to_id, options_for_assigned_to_id_select_for_user(User.all, issue.assigned_to), {:prompt => 'Select'}, class: "form-control col-sm-8 select2" %>
  </div>

  <div class="actions">
    <%= f.submit 'Create', class: "btn btn-primary"  %>
  </div>
<% end %>
