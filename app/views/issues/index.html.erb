<h1>Issues</h1>

<div class="list">
  <table class='table table-striped table-bordered table-sm table-hover'>
    <thead>
    <tr>
      <th>Subject</th>
      <th>Description</th>
      <th>Assigned to</th>
      <th colspan="2"></th>
    </tr>
    </thead>
    <tbody>
    <% @issues.each do |issue| %>
        <tr>
          <td><%= issue.subject %></td>
          <td><%= issue.description %></td>
          <td><%= issue.assigned_to&.name || '-' %></td>
          <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
          <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @issues %>
  <%= page_entries_info @issues %>
</div>

<br>

<%= link_to 'New Issue', new_issue_path, class: "btn btn-primary" %>
